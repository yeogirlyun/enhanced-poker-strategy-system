      "bg_top": "$felt",
      "bg_bottom": "$rail",
      "text": "$emphasis_text",
      "accent_text": "$raise",
      "divider": "$metal",
      "texture": "velvet_8pct"
    },
    "chips": {
      "stack": { "face": "$chip_face", "edge": "$chip_edge", "rim": "$chip_rim", "text": "$chip_text" },
